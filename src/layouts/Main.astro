---
import Head from "../components/Head.astro";
import Footer from "../components/Footer.astro";
import type { BodyIdentifiers } from "../..";

import "../styles/global.css";

interface Props {
  title: string;
  bodyId: BodyIdentifiers;
}

const { title, bodyId } = Astro.props;
---

<!doctype html>
<html lang="en-US" dir="ltr">
  <Head title={title} />
  <body id={bodyId}> </body><slot />
  <Footer />
</html>
